<div class="flex items-center justify-center h-full  my-40">
    <div class="px-8 py-6 mt-4 text-left bg-grey-100 shadow-lg">
        <h3 class="text-2xl font-bold text-center">Log in to your account</h3>
        <form action="/user/login" method="post">
            <div class="mt-4">
                <div>
                    <label class="block" for="username">Username</label>
                            <input type="text" name="username" placeholder="Username"
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" required>
                </div>
                <div class="mt-4">
                    <label class="block">Password</label>
                            <input type="password" name="password" placeholder="Password"
                                class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" required>
                </div>
                <div class="flex items-baseline justify-between">
                    <button type="submit" class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Login</button>
                    <a href="/user/forgot" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
                </div>
            </div>
        </form>
    </div>
</div>